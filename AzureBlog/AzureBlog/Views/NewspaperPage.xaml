<Page
    x:Class="AzureBlog.Views.NewspaperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AzureBlog.Views"
    xmlns:models="using:AzureBlog.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">

        <GridView x:Name="NewspaperGridView"
            IsItemClickEnabled="True"
            ItemClick="NewspaperGridView_ItemClick"
            IsSwipeEnabled="False"
            CanDragItems="False"
            SelectionMode="Single" RequestedTheme="Light"
                  ItemsSource="{x:Bind _currentController.RSSNewspaper.Articles}">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Article">
                    <Grid Background="#FF939598" Height="350" Width="400" Margin="20,20,0,0">
                        <Image Source="{x:Bind ImageUriString}" Stretch="UniformToFill"/>
                        <StackPanel Orientation="Vertical" Background="#CC000000" Height="180" VerticalAlignment="Bottom">
                            <TextBlock Text="{x:Bind Title}" FontSize="25" Foreground="Aqua" Margin="20,3,0,00" Width="360" Height="80" LineHeight="30" TextWrapping="Wrap" TextTrimming="WordEllipsis" HorizontalAlignment="Left"/>
                            <ListView x:Name="lvCategories" ItemsSource="{x:Bind Categories}" Height="40" SelectionMode="None" IsEnabled="False" >
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" MaxHeight="40">
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="White" FontSize="10" TextTrimming="WordEllipsis"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <ListView x:Name="lvAuthors" ItemsSource="{x:Bind Authors}" VerticalAlignment="Top" Margin="0" Height="40" SelectionMode="None" IsEnabled="False" >
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" MaxHeight="40">
                                        </StackPanel>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="White" FontSize="10" TextTrimming="WordEllipsis"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <TextBlock Text="{x:Bind PublishedDateTime}" Foreground="LightGray">
                                
                            </TextBlock>

                        </StackPanel>
                    </Grid>

                </DataTemplate>  
            </GridView.ItemTemplate>
        </GridView>

    </Grid>


</Page>
